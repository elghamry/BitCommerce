<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/your_order_container3"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="6dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/product_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:lines="1"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="X1"
                    android:textColor="@color/white"

                    android:textSize="15sp" />

            <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/grenale_conbla"

                    android:maxLength="15"
                    android:maxLines="1"
                    android:text="Rocky Road"
                    android:textColor="@color/white"

                    android:textSize="15sp"
                    android:textStyle="bold" />
        </LinearLayout>


        <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ubuntu_regular"
                android:lines="1"
                android:visibility="gone"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:text="High protein bars (Peanut Butter) "
                android:textColor="@color/white"

                android:textSize="12sp" />


    </LinearLayout>

    <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="19dp"

            android:layout_marginEnd="56dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/price_demo"
            android:textColor="@color/white"

            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>